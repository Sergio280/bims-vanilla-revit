<Window x:Class="ClosestGridsAddinVANILLA.ACERO.ACEROVIGASXAML"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClosestGridsAddinVANILLA.ACERO"
        mc:Ignorable="d"
        Title="ACERO DE REFUERZO EN VIGAS" Height="500" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- ✅ SECCIÓN 1: Distribución -->
        <GroupBox Grid.Row="0" Header="Distribución" Margin="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <!-- Confinamiento -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="En el confinamiento :" Width="200" VerticalAlignment="Center"/>
                    <TextBox x:Name="confinamientoLonG" Text="0.5" Width="60" Height="25"/>
                </StackPanel>

                <!-- Espaciamiento en luz -->
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Espaciamiento de estribos en la luz :" Width="200" VerticalAlignment="Center"/>
                    <TextBox x:Name="espaciamientoenLuz" Text="0.20" Width="60" Height="25"/>
                </StackPanel>

                <!-- Espaciamiento en confinamiento -->
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Espaciamiento en el confinamiento :" Width="200" VerticalAlignment="Center"/>
                    <TextBox x:Name="espaciamientoenConf" Text="0.10" Width="60" Height="25"/>
                </StackPanel>

                <!-- Longitud para viga T -->
                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Longitud para viga T (ft.):" Width="200" VerticalAlignment="Center"/>
                    <TextBox x:Name="longitudVigaTUI" Text="0.25" Width="60" Height="25"/>
                </StackPanel>

                <!-- CheckBoxes -->
                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                    <CheckBox x:Name="activarEstribos" Content="Estribos" Margin="0,5"/>
                    <CheckBox x:Name="activarLong" Content="Longitudinales" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Ala de viga T :" Width="200" VerticalAlignment="Center"/>
                    <TextBox x:Name="longitudVigaT" Text="0.25" Width="60" Height="25" Margin="0,2"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ✅ SECCIÓN 2: Configuración de Acero -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Recubrimiento -->
            <GroupBox Grid.Column="0" Header="Recubrimiento" Margin="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="E (ft.):" Margin="0,5"/>
                    <TextBox x:Name="recubrimiento" Text="0.05" Width="80" Height="25"/>
                </StackPanel>
            </GroupBox>

            <!-- Acero Longitudinal -->
            <GroupBox Grid.Column="1" Header="Ac. Longitudinal" Margin="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Ø:" Margin="0,5"/>
                    <ComboBox x:Name="barras" Width="100" Height="25"/>
                </StackPanel>
            </GroupBox>

            <!-- Acero en Estribos -->
            <GroupBox Grid.Column="2" Header="Ac. en Estribos" Margin="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Ø:" Margin="0,5"/>
                    <ComboBox x:Name="estribos" Width="100" Height="25"/>
                </StackPanel>
            </GroupBox>

            <!-- Distribución de Acero -->
            <GroupBox Grid.Column="3" Header="Distribución de Ac." Margin="5" Padding="10">
                <StackPanel>
                    <!-- Superior -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Superior:" Width="60" VerticalAlignment="Center"/>
                        <ComboBox x:Name="Superior" Width="50" Height="22" SelectedIndex="0">
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Central -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Central:" Width="60" VerticalAlignment="Center"/>
                        <ComboBox x:Name="Central" Width="50" Height="22" SelectedIndex="0">
                            <ComboBoxItem Content="0"/>
                            <ComboBoxItem Content="2"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Inferior -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Inferior:" Width="60" VerticalAlignment="Center"/>
                        <ComboBox x:Name="Inferior" Width="50" Height="22" SelectedIndex="0">
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- ✅ SECCIÓN 3: Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <Button Content="Aceptar" Width="80" Height="35" Margin="10,0" Background="LightGray" Click="Button_Click"/>
            <Button Content="Cancelar" Width="80" Height="35" Margin="10,0" Background="LightGray" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>