<Window x:Class="ClosestGridsAddinVANILLA.ACERO.ACEROCOLUMNASXAML"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClosestGridsAddinVANILLA.ACERO"
        mc:Ignorable="d"
        Title="ACERO DE REFUERZO EN COLUMNAS" Height="185" Width="413">
    <Grid Margin="0,0,-65,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Grid Margin="0,0,97,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Row="0" 
              Header="Recubrimiento" 
              Margin="15">
                <StackPanel Margin="20,10,0,0">
                    <TextBlock Text="E :  "/>
                    <TextBox x:Name="recubrimiento" 
                     Text="0.05" 
                     HorizontalAlignment="Left" 
                     Width="50" Height="20"/>
                </StackPanel>


            </GroupBox>

            <GroupBox Grid.Column="1" 
              Header="Diametro:  " 
              Margin="15">
                <StackPanel Margin="20,10,0,0">
                    <TextBlock Text="Ø :  "/>
                    <ComboBox x:Name="diametro" 
                     HorizontalAlignment="Left" 
                     Width="50" Height="20"/>
                </StackPanel>


            </GroupBox>


        </Grid>

        <StackPanel 
                Orientation="Horizontal" 
                Margin="30,0,91,-55">
            <Button Content="Aceptar" 
                Width="60" Height="30" 
                Background="White" 
                Click="Button_Click"/>
            <Button Margin="170,0,0,0" 
                Content="Cancelar" 
                IsCancel="True" 
                Width="60" Height="30" 
                Background="White"/>
        </StackPanel>
    </Grid>
</Window>
