<Window x:Class="ClosestGridsAddinVANILLA.ACERO.ACEROLOSASYCIMIENTOSXAML"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClosestGridsAddinVANILLA.ACERO"
        mc:Ignorable="d"
        Title="ACERO EN LOSAS Y CIMIENTOS" Height="339" Width="358">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="236"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox 
        Grid.Row="0" 
        Header="Parámetros" 
        Margin="15,15,15,2"
        Padding="0,10,0,0">
            <Grid Height="198">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel 
                Margin="20,10,0,0" 
                Orientation="Vertical" 
                HorizontalAlignment="Left">
                    <TextBlock Text="Diámetro de barra:  "/>
                    <ComboBox x:Name="diametroBarra"  
                         HorizontalAlignment="Left" 
                         Width="50" 
                         Height="20"/>
                </StackPanel>
                <StackPanel Grid.Row="1" 
                        Margin="20,10,0,0" 
                        Orientation="Vertical" 
                        HorizontalAlignment="Left">
                    <TextBlock Text="Tipo de gancho:  "/>
                    <ComboBox x:Name="tipodegancho" 
                         HorizontalAlignment="Left" 
                         Width="50" 
                         Height="20"/>
                </StackPanel>

                <StackPanel Grid.Row="2" 
        Margin="20,10,0,26" 
        Orientation="Vertical" 
        HorizontalAlignment="Left">
                    <CheckBox x:Name="activarganchoinferior" 
                    Content="Activar gancho inferior" 
                    Checked="Checked" Unchecked="HandleUnchecked" />

                    <CheckBox x:Name="activarganchosuperior" 
                    Content="Activar gancho superior" 
                    Checked="Checked" Unchecked="HandleUnchecked" Width="156" />
                </StackPanel>
                <TextBox x:Name="espaciamiento" HorizontalAlignment="Left" Height="21" Margin="185,17,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Espaciamiento(m)" VerticalAlignment="Top" Width="104"/>
                <StackPanel 
                    Margin="180,10,0,0" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Left">
                    <TextBlock Text="Recubrimiento:  "/>
                    <ComboBox x:Name="recubrimiento"  
                        HorizontalAlignment="Left" 
                        Width="50" 
                        Height="20"/>
                </StackPanel>

            </Grid>
        </GroupBox>


        <StackPanel Grid.Row="1" 
                Orientation="Horizontal" 
                Margin="15,15,15,15">
            <Button Content="Aceptar" 
                Width="60" Height="30" 
                Background="White" 
                Click="Button_Click"/>
            <Button Margin="190,0,0,0" 
                Content="Cancelar" 
                IsCancel="True" 
                Width="60" Height="30" 
                Background="White"/>
        </StackPanel>


    </Grid>



</Window>
