<Window x:Class="ClosestGridsAddinVANILLA.Views.FormwBimsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FORMWBIMS - Seleccionar CategorÃ­as"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#DDDDDD">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con botÃ³n de cerrar -->
            <Grid Grid.Row="0" Background="#007ACC" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="FORMWBIMS - Encofrado Inteligente"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="15,12"
                           VerticalAlignment="Center"/>
                <Button Content="âœ•"
                        Width="35"
                        Height="35"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C75050"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="30,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Icono y TÃ­tulo -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Seleccionar CategorÃ­as"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- DescripciÃ³n -->
                <TextBlock Grid.Row="1"
                           Text="Marque las categorÃ­as de elementos que desea encofrar:"
                           FontSize="13"
                           Foreground="#666666"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Checkboxes de categorÃ­as -->
                <Border Grid.Row="2"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="20"
                        Background="#F9F9F9">
                    <StackPanel>
                        <CheckBox x:Name="ChkColumnas" Content="ðŸ›ï¸  Columnas" IsChecked="True"/>
                        <CheckBox x:Name="ChkMuros" Content="ðŸ§±  Muros" IsChecked="True"/>
                        <CheckBox x:Name="ChkVigas" Content="â”  Vigas" IsChecked="True"/>
                        <CheckBox x:Name="ChkLosas" Content="â–­  Losas" IsChecked="True"/>
                        <CheckBox x:Name="ChkEscaleras" Content="ðŸªœ  Escaleras" IsChecked="True"/>
                        <CheckBox x:Name="ChkCimentacion" Content="âš“  CimentaciÃ³n" IsChecked="False"/>
                    </StackPanel>
                </Border>

                <!-- Info adicional -->
                <Border Grid.Row="3"
                        Background="#FFF9E6"
                        BorderBrush="#FFD700"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0"
                        VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸  Instrucciones:" FontWeight="Bold" FontSize="13" Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#666">
                            <Run Text="1. Seleccione las categorÃ­as a procesar"/>
                            <LineBreak/>
                            <Run Text="2. Haga clic en 'Continuar'"/>
                            <LineBreak/>
                            <Run Text="3. Seleccione los elementos en el modelo"/>
                            <LineBreak/>
                            <Run Text="4. Presione 'Finalizar' para crear los encofrados"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Botones -->
                <Grid Grid.Row="4" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Cancelar"
                            Background="#CCCCCC"
                            Style="{StaticResource ButtonStyle}"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="2"
                            x:Name="ContinueButton"
                            Content="Continuar âž”"
